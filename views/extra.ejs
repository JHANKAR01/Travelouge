<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Travel Forum</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        .chat-container {
            background-color: #f5f5f5;
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 20px;
            margin-top: 20px;
        }

        .message {
            background-color: #fff;
            padding: 10px;
            border-radius: 10px;
            margin: 10px 0;
            display: flex;
            flex-direction: column;
            max-width: 70%;
        }

        .user {
            font-weight: bold;
        }

        hr {
            margin: 10px 0;
        }

        .input-container {
            display: flex;
            margin-top: 20px;
        }

        .input-container input {
            flex-grow: 1;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 30px;
        }

        .input-container button {
            background-color: #25d366;
            color: #fff;
            border: none;
            border-radius: 50%;
            padding: 10px;
            cursor: pointer;
        }

        .search-container {
            display: flex;
            margin-top: 20px;
        }

        .search-container input {
            flex-grow: 1;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 30px;
        }

        .search-container button {
            background-color: #25d366;
            color: #fff;
            border: none;
            border-radius: 50%;
            padding: 10px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Welcome to the Travel Forum</h1>
        <div class="search-container">
            <input type="text" id="city-search" placeholder="Search by city">
            <button id="search-button">Search</button>
        </div>
        <hr>
        <div class="chat-container" id="chat-container">
            <!-- Messages will be added here dynamically with JavaScript -->
        </div>
        <div class="input-container">
            <input type="text" id="username" placeholder="Your username" required>
            <input type="text" id="city" placeholder="Your city" required>
            <textarea rows="4" id="message" placeholder="Type your message" required></textarea>
            <button id="send-button" class="send-button">Send</button>
        </div>
    </div>

    <script>
        const chatContainer = document.getElementById('chat-container');
        const messageInput = document.getElementById('message-input');
        const sendButton = document.getElementById('send-button');
        const citySearch = document.getElementById('city-search');
        const searchButton = document.getElementById('search-button');

        sendButton.addEventListener('click', () => {
            const username = document.getElementById('username').value;
            const city = document.getElementById('city').value;
            const messageText = messageInput.value.trim();
            if (username && city && messageText) {
                const newMessage = document.createElement('div');
                newMessage.classList.add('message');
                newMessage.innerHTML = `<span class="user">${username} (${city}):</span> ${messageText}`;
                chatContainer.appendChild(newMessage);
                messageInput.value = '';
                chatContainer.scrollTop = chatContainer.scrollHeight;
            }
        });

        searchButton.addEventListener('click', () => {
            const cityToSearch = citySearch.value.trim();
            if (cityToSearch) {
                // Implement search functionality and display results in chatContainer
                // For simplicity, we will just add a message for demonstration.
                const searchResult = document.createElement('div');
                searchResult.classList.add('message');
                searchResult.innerHTML = `Search results for city: ${cityToSearch}`;
                chatContainer.appendChild(searchResult);
                citySearch.value = '';
                chatContainer.scrollTop = chatContainer.scrollHeight;
            }
        });
    </script>
</body>
</html>
