    <section class="get-started">
        <div class="container">
            <h2>Get Started</h2>
            <div class="form-container">
                <form id="trip-form" action="/destination" method="POST">
                    <div class="form-group">
                        <label for="place">Where do you want to go?</label>
                        <input type="text" id="place" name="place1" placeholder="Enter a destination" required>
                    </div>
                    <div class="date-inputs">
                        <div class="form-group">
                            <label for="start-date">Start Date</label>
                            <input type="date" id="start-date" name="start-date" required>
                        </div>
                        <div class="form-group">
                            <label for="end-date">End Date</label>
                            <input type="date" id="end-date" name="end-date" required>
                        </div>
                    </div>
                    <button type="submit">My Trip</button>
                </form>
