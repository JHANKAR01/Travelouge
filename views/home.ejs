                <% } %>
            </ul>
            </div>
          </nav>

          <section class="hero">
            <div class="hero-content">
                <h1>Plan Your Dream Trip</h1>
                <p>Discover amazing destinations and create unforgettable memories.</p>
                <a href="get_started" class="btn-primary">Get Started</a>
            </div>
        </section>
        <style>
          body {
    margin: 0;
  }
  
  .slider {
    overflow: hidden;
    width: 80vw;
    height: 80vh;
    position: relative;
    margin-left: 9%;
    margin-top: 0%;
  }
  
  .slider .slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    animation: slide 10s infinite;
  }
  
  .slider .slide:nth-child(1) {
    background-image: url('bhopal_feat.jpg');
    animation-delay: -0;
  }
  
  .slider .slide:nth-child(2) {
    background-image: url('bhopal_feat2.jpg');
    animation-delay: -2s;
  }
    
  .slider .slide:nth-child(3) {
    background-image: url('bhopal_feat3.jpg');
    animation-delay: -4s;
  }
    
  .slider .slide:nth-child(4) {
    background-image: url('agra_feat.jpg');
    animation-delay: -6s;
  }
  
  .slider .slide:nth-child(5) {
    background-image: url('citadel.jpg');
    animation-delay: -8s;
  }
  
  @keyframes slide {
    0%, 15%, 100% {
      transform: translateX(0);
      animation-timing-function: ease;
    }
    20% {
      transform: translateX(-100%);
      animation-timing-function: step-end;
    }
    95% {
      transform: translateX(100%);
      animation-timing-function: ease;
    }
  }
      </style>
