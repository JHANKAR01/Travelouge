<html>
  <head>
    <title>HomePage</title>
     
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <!-- <link rel="stylesheet" href="styles.css"> -->
    <style>
      .navbar-nav > li{
        margin-left:30px;
        margin-right:30px;
      }
      body, h1, h2, p {
          margin: 0;
          padding: 0;
      }

      /* Global Styles */
      body {
          font-family: Arial, sans-serif;
          background-color: #f0f0f0;
      }

      /* Hero Section Styles */
      .hero {
          background-image: url('<%= imageFileName %>'); /* Replace with your own image */
          background-size: cover;
          color: #fff;
          text-align: center;
          padding: 150px 0;
      }

      .hero-content h1 {
          font-size: 48px;
          margin-bottom: 20px;
          font-weight: bold;
      }

      .hero-content p {
          font-size: 24px;
          margin-bottom: 40px;
      }

      .btn-primary {
          background-color: #007bff;
          color: #fff;
          padding: 15px 30px;
          font-size: 20px;
          text-decoration: none;
          border: none;
          border-radius: 5px;
          cursor: pointer;
          transition: background-color 0.3s ease;
      }

      .btn-primary:hover {
          background-color: #0056b3;
      }

      /* Featured Destinations Styles */
      .featured-destinations {
          background-color: #fff;
          padding: 40px 0;
          box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      .featured-destinations h2 {
          font-size: 36px;
          margin-bottom: 30px;
          font-weight: bold;
          text-align:left;
          margin-left: 20px;
          border-left:20px solid red;
      }

      /* Destination Cards */
      .destination-card {
          background-color: #fff;
          border-radius: 10px;
          box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
          overflow: hidden;
          margin: 20px;
          max-width: 300px;
          transition: transform 0.3s ease;
      }

      .destination-card:hover {
          transform: translateY(-10px);
      }

      .destination-card img {
          width: 100%;
          height: auto;
      }

      .destination-card-content {
          padding: 20px;
      }

      .destination-card h3 {
          font-size: 24px;
          margin-bottom: 10px;
      }

      .destination-card p {
          font-size: 16px;
          color: #777;
      }

      /* Footer Styles */
      footer {
          background-color: #333;
          color: #fff;
          text-align: center;
          padding: 20px 0;
      }
    </style>
  </head>
      
